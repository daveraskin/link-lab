<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h1> Create a post </h1>
      <h3> Hello <%= @current_user.name %> </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <%= bootstrap_form_for @post do |p| %>
      <%= p.text_field :title, :placeholder => 'title' %>
      <%= p.text_field :link, :placeholder => 'link' %>

      <%= p.primary %>
      <% end %>

    </div>
  </div>
</div>