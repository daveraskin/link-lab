<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1> Reset Password </h1>
    </div>
  </div>
  <div class="row">

    <% flash.each do |k,v| %>


  <div class="alert alert-<%= k %>">
     <%= v %>
  </div>

    <% end %>
    <div class="col-md-4 col-md-offset-4">

      <%= bootstrap_form_tag url: passwords_path do |f| %>

        <%= f.text_field :email %>
        <%= submit_tag "Reset Password", :class => "btn btn-danger" %>

      <% end %>



    </div>
  </div>
</div>