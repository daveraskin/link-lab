<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1> Enter a new password </h1>
    </div>
  </div>
  <div class="row">

    <% flash.each do |k,v| %>


  <div class="alert alert-<%= k %>">
     <%= v %>
  </div>

    <% end %>
    <div class="col-md-4 col-md-offset-4">

      <%= bootstrap_form_for @user, url: password_path(@user.code) do |f| %>
      <%= f.text_field :password, :placeholder => "password", :icon => "lock" %>
      <%= f.submit "Update" %>

    <% end %>

    <%= link_to "Forgot your password?", new_password_path %>

    </div>
  </div>
</div>